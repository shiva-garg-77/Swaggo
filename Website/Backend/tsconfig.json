{
  "compilerOptions": {
    // Backend-specific settings
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES2022"],
    "types": ["node", "jest"],
    
    // Path mapping specific to Backend
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["./Config/*"],
      "@controllers/*": ["./Controllers/*"],
      "@models/*": ["./Models/*"],
      "@middleware/*": ["./Middleware/*"],
      "@routes/*": ["./Routes/*"],
      "@services/*": ["./Services/*"],
      "@security/*": ["./Security/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@repositories/*": ["./Repositories/*"],
      "@graphql/*": ["./GraphQL/*"],
      "@db/*": ["./db/*"],
      "@helper/*": ["./Helper/*"],
      "@scripts/*": ["./Scripts/*"]
    }
  },
  "include": [
    "**/*.ts",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "docs",
    "logs",
    "temp",
    "uploads",
    "backups",
    "tests/**/*.test.js",
    "tests/**/*.spec.js"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2022",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    }
  },
  "compileOnSave": false
}