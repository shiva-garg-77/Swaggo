{
  "compilerOptions": {
    // Frontend-specific settings
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Path mapping specific to Frontend
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./Components/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@contexts/*": [
        "./context/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@security/*": [
        "./security/*"
      ],
      "@auth/*": [
        "./auth/*"
      ],
      "@performance/*": [
        "./performance/*"
      ],
      "@testing/*": [
        "./testing/*"
      ],
      "@monitoring/*": [
        "./monitoring/*"
      ],
      "@architecture/*": [
        "./architecture/*"
      ]
    },
    "target": "ES2017",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "coverage"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
