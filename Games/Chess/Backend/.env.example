# Chess Game Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=4001
CHESS_SERVER_URL=http://localhost:4001

# Database
MONGODB_URI=mongodb://localhost:27017/swaggo_chess
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication (shared with main backend)
JWT_SECRET=your_jwt_secret_here
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# WebRTC
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# Rate Limiting
RATE_LIMIT_INVITE=10
RATE_LIMIT_CHAT=5
RATE_LIMIT_MATCHMAKING=1

# Game Configuration
DEFAULT_ELO=1200
MAX_QUEUE_WAIT_TIME=300
MATCHMAKING_CHECK_INTERVAL=2000
ELO_RANGE_INITIAL=100
ELO_RANGE_MAX=300
ELO_RANGE_INCREMENT=50

# Security
ENABLE_ANTI_CHEAT=true
SUSPICIOUS_MOVE_TIME_MS=100
ENGINE_ACCURACY_THRESHOLD=98

# Performance
REDIS_CACHE_TTL=3600
GAME_STATE_CACHE_TTL=3600
PLAYER_STATS_CACHE_TTL=300
